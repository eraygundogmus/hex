{
  "compilerOptions": {
    "jsx": "react",
    "strict": true
  },
  "lint": {
    "files": {
      "include": [
        "src/",
        "mod.ts",
        "*.md",
        "*.json"
      ],
      "exclude": [
        "tmp/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "mod.ts",
        "*.md",
        "*.json"
      ],
      "exclude": [
        "tmp/"
      ]
    }
  },
  "test": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "tmp/"
      ]
    }
  },
  "tasks": {
    "test": "deno test ./src/ --coverage=./etc/cov_profile",
    "test:coverage": "deno coverage ./etc/cov_profile",
    "test:generate-lcov": "deno coverage ./etc/cov_profile --lcov > ./etc/cov_profile/cov_profile.lcov",
    "bench": "deno bench ./src/ --unstable",
    "cli": "deno run ./src/test.ts"
  }
}
